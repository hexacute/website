mixin Author(author, isPost)
  - author = contributors.map[author]

  .putainde-Author(class=attributes.class)

    +Avatar(author.login).putainde-Author-picture

    .putainde-Author-description
      .putainde-Author-title
        h3.putainde-Author-name
          if isPost
            span.putainde-WrittenBy #{lang.writtenBy}
            = " "
          a(href="#{getAuthorUri(author)}").putainde-Link #{author.login}
        .putainde-Author-social
          if author.url
            a(href="#{getAuthorUri(author)}", data-cssr-tooltip="Website").cssr-Tooltip.cssr-Tooltip--top
              +Icon("home")
          if author.twitter
            a(href="#{getAuthorUri(author, 'twitter')}", data-cssr-tooltip="Twitter").cssr-Tooltip.cssr-Tooltip--top
              +Icon("twitter")
          if author.login
            a(href="#{getAuthorUri(author, 'github')}", data-cssr-tooltip="Github").cssr-Tooltip.cssr-Tooltip--top
              +Icon("github")

      p.putainde-Author-bio
        -if(author.fr && author.fr.bio && author.fr.bio.long)
          != author.fr.bio.long.join(' <br> ')
